html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

html,
body
  margin 0
  padding 0

html, body
  width 100%
  height 100%

body
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  &.js-open-sans-loaded
    font-family 'Open Sans', Helvetica Neue, Helvetica, Arial, sans-serif

